<div class="user-bar govuk-grid-row govuk-body">
  <div class="govuk-grid-column-full">
    <ul class="user-menu govuk-!-font-size-16">
      <li>Signed in as: <%= current_user.full_name %></li>
      <li><%= link_to("Users", main_app.admin_users_path) %></li>
      <li><%= link_to "Download all projects", main_app.admin_download_path %></li>
      <li><%= link_to("Submissions", main_app.admin_confirmations_path) %></li>
      <% if ENV.fetch('POL_FAILURE_NOTIFICATION_EMAIL', false) %>
        <li><%= link_to("Failed Submissions", main_app.admin_failed_submissions_path) %></li>
      <% end %>
      <li><%= link_to(t('logout_link'), main_app.destroy_user_session_path) %></li>
    </ul>
    <hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible">
  </div>
</div>
