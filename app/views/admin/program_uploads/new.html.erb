<%= pafs_form_for [:admin, @upload], html: { multipart: true } do |f| %>
  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l"><%= t('.heading') %></h1>
      <p><%= t(".description") %></p>
    </div>
  </div>
  <%= form_group f.object, :base, :base do %>
    <%= error_message f.object, :base, :base %>
    <%= f.govuk_file_field :program_upload_file,
      accept: @upload.program_upload_file_types,
      aria: { labelledby: "file-upload" },
      label: nil %>
    <%= f.hidden_field :id %>
  <% end %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="notice">
        <strong>
          <em><span class="visuallyhidden">Important:</span></em>
          <%= t(".notice") %>
        </strong>
      </div>
    </div>
  </div>
    <div class="form-group">
      <%= f.govuk_check_box :reset_consented_flag, :reset_consented_flag, label: { text: t(".reset_label") }%>
    </div>
    <p>
    <%= f.govuk_submit t(".upload_and_process_label"), class: 'button' %>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary" aria-controls="import-help">
            <span class="govuk-details__summary-text"><%= t(".import_help_title") %></span>
          </summary>
          <div class="govuk-details__text" id="import-help">
            <%= t(".import_help_html") %>
          </div>
        </details>
      </div>
    </div>
<% end %>
