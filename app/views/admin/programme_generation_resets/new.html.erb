<h1 class="govuk-heading-l"><%= t(".heading") %></h1>
<%= pafs_form_for @confirmation, url: main_app.admin_programme_generation_resets_path(method: :post) do |f| %>
  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-s"><%= t(".confirm_heading") %></h2>
      <p>Click the button to reset ALL area programme generation processes.</p>
      <p>This will fix the system issue where the spreadsheet generation has become unresponsive</p>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= form_group f.object, :base, :base do %>
        <%= f.govuk_check_box :confirm, :confirm, label: { text: t(".confirm_label") } %>
      <% end %>
    </div>
  </div>
  <div class="form-group headroom">
    <%= f.govuk_submit t(".heading"), class: 'button' %>
  </div>
<% end %>
