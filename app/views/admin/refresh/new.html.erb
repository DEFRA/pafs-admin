<h1 class="govuk-heading-l"><%= t(".heading") %></h1>
<%= pafs_form_for @confirmation, url: main_app.admin_refresh_index_path do |f| %>
  <h2 class="govuk-heading-s"><%= t(".confirm_heading") %></h2>
  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">
      <p>Click the button to Open the Programme Refresh</p>
      <p>This will set ALL projects back to 'Draft' Status</p>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= form_group f.object, :base, :base do %>
        <%= f.govuk_check_box :confirm, :confirm, label: { text: t(".confirm_label") } %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.govuk_submit t(".heading"), class: 'button' %>
  </div>
<% end %>
