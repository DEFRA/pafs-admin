<% content_for :title, "Change password" %>
<% migrate_devise_errors_for resource %>
<%= pafs_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <h1 class="govuk-heading-l">Change password</h1>
  <%= form_group f.object, :base, :base do %>
    <%= f.object, :base, :base %>
    <%= f.hidden_field :reset_password_token %>

    <%
      opts = { label: "New password",
               class: "form-control",
               autofocus: true,
               autocomplete: "off" }
      if @minimum_password_length
        opts[:hint] = "Should be a minimum of #{@minimum_password_length} characters in length."
      end
    %>
    <%= f.govuk_password_field :password, opts %>
    <%= f.govuk_password_field :password_confirmation, class: "form-control",
          autocomplete: "off", label: "Confirm new password" %>
  <% end %>
  <div class="form-group">
    <%= f.govuk_submit "Change password", class: "button" %>
  </div>
<% end %>
